<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_book_list_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.boge.bogebook.mvp.ui.activity.BookListDetailActivity"
    tools:showIn="@layout/activity_book_list_detail">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/item_margin">
        <com.boge.bogebook.view.CircleOrRectImage
            android:id="@+id/iv_author"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:isCircle="false"
            app:orderRadius="8dp"/>
        <TextView
            android:id="@+id/tv_book_list_author"
            android:layout_toRightOf="@+id/iv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin"
            android:textColor="@color/light_coffee"
            android:textSize="@dimen/small_size"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_below="@+id/tv_book_list_author"
            android:layout_toRightOf="@+id/iv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/small_size_1"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_below="@+id/iv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:singleLine="true"
            android:textSize="@dimen/small_size"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_below="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin"
            android:singleLine="true"
            android:textSize="@dimen/small_size" />
        <com.boge.bogebook.view.CircleOrRectImage
            android:id="@+id/iv_author_1"
            android:layout_below="@+id/tv_desc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/item_margin"/>
        <TextView
            android:id="@+id/tv_author"
            android:layout_toRightOf="@+id/iv_author_1"
            android:layout_below="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_marginLeft="@dimen/item_margin"/>
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_margin"
            android:background="@drawable/layout_share_bg"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/small_size_1"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_h2"/>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/line"
        android:id="@+id/book_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>
</RelativeLayout>
